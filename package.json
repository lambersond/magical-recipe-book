{
  "name": "magical-cookbook",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "db:setup": "prisma generate --no-engine && prisma migrate deploy && prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "dev": "TZ=UTC next dev --turbopack",
    "lint:fix": "next lint --fix",
    "lint": "next lint",
    "start": "next start",
    "test:coverage:watch": "jest --coverage --watch",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test": "jest",
    "vercel-build": "npm run vercel-build:seed",
    "vercel-build:seed": "prisma generate --no-engine && prisma migrate deploy && prisma db push && npm run db:seed && next build",
    "vercel-build:blank": "prisma generate --no-engine && prisma migrate deploy && next build"
  },
  "dependencies": {
    "@3d-dice/dice-box": "^1.1.4",
    "@auth/prisma-adapter": "^2.11.1",
    "@floating-ui/react": "^0.27.17",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "6.9.0",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "lodash": "^4.17.23",
    "lucide-react": "^0.564.0",
    "next": "16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-masonry-css": "^1.0.16",
    "react-tabs": "^6.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unicorn": "^63.0.0",
    "globals": "^16.3.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.2.7",
    "node-mocks-http": "^1.17.2",
    "prettier": "^3.8.1",
    "prisma": "6.9.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "jsxSingleQuote": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
