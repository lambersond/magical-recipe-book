{
  "name": "magical-cookbook",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "db:seed": "ts-node prisma/seed.ts",
    "dev": "TZ=UTC next dev --turbopack",
    "lint:fix": "next lint --fix",
    "lint": "next lint",
    "start": "next start",
    "test:coverage:watch": "jest --coverage --watch",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test": "jest",
    "vercel-build": "npm run vercel-build:seed",
    "vercel-build:seed": "prisma generate --no-engine && prisma migrate deploy && prisma db push && npm run db:seed && next build",
    "vercel-build:blank": "prisma generate --no-engine && prisma migrate deploy && next build"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@floating-ui/react": "^0.27.13",
    "@hookform/resolvers": "^5.1.1",
    "@prisma/client": "6.9.0",
    "classnames": "^2.5.1",
    "lodash": "^4.17.21",
    "next": "15.3.5",
    "next-auth": "^5.0.0-beta.29",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "react-masonry-css": "^1.0.16",
    "react-tabs": "^6.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@stylistic/eslint-plugin": "^5.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-responsive-masonry": "^2.6.0",
    "eslint": "^9.30.1",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.1.2",
    "node-mocks-http": "^1.17.2",
    "prettier": "^3.6.2",
    "prisma": "6.9.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "jsxSingleQuote": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
